{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/swagger.ts",
    "src/test/**/*.ts",
    "swaggerConfig.ts"
  ],
  "exclude": [
    "src/types/*.ts",
    "node_modules",
    ".vscode"
  ]
}